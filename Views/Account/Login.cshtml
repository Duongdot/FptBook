
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<!-- Start: Login Form Dark -->
<!-- Start: Login Form Dark -->
<section class="login-dark" style="background: rgb(108,252,175);">
    <form method="post" style="background: rgb(0,28,40);">
        <h2 class="visually-hidden">Login Form</h2>
        <div class="illustration"><i class="icon ion-ios-locked-outline"></i></div>
        <div class="mb-3"><input class="form-control" type="email" name="email" placeholder="Email"></div>
        <div class="mb-3"><input class="form-control" type="password" name="password" placeholder="Password" style="border-color: rgb(0,0,0);"></div>
        <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit" style="background: rgb(26,235,147);">Log In</button></div><a class="forgot" href="#">Forgot your email or password?</a>
    </form>
</section><!-- End: Login Form Dark -->
